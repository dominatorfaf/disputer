<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="1dp"
    app:cardCornerRadius="1dp"
    android:outlineSpotShadowColor="#818181"
    android:outlineAmbientShadowColor="#818181"
    app:cardPreventCornerOverlap="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nightBackground"
        >

        <ImageView
            android:id="@+id/dispute_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dispute_text"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Alright, Let's code!!! "
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/dispute_name"
            app:layout_constraintTop_toBottomOf="@+id/dispute_name"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/dispute_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Name"
            android:textColor="@color/welcomeColor"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/dispute_avatar"
            app:layout_constraintTop_toTopOf="@+id/dispute_username" />

        <TextView
            android:id="@+id/dispute_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Username"
            android:textColor="@color/welcomeColor"
            app:layout_constraintStart_toEndOf="@+id/dispute_name"
            app:layout_constraintTop_toTopOf="@+id/dispute_avatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>